@model IEnumerable<RealtorsPortalSystem.Models.PhotoDetail>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/MainLayout/_MainLayout.cshtml";
}

<link href="~/css/thumbnail/swiper.min.css" rel="stylesheet" />
<link href="~/css/thumbnail/style.css" rel="stylesheet" />


<br /><br /><br /><br />

<section class="ftco-section ftco-property-details">
    <div class="container">

        <div class="swiper-container gallery-top">
            <div class="swiper-wrapper">
                @{ var i = 0;}
                @foreach (var m in Model)
                {
                    if (i == 0)
                    {
                        <div class="swiper-slide cover" style="background-image:url('@Url.Content(@m.Advertisement.Photothumbnail)')">


                        </div>

                        i++;
                    }
                    break;
                }
                @foreach (var item in Model)
                {
                    <div class="swiper-slide cover" style="background-image:url( '@Url.Content(@item.Image )')">


                    </div>
                }




            </div>

            <div class="swiper-button-next swiper-button-white"></div>
            <div class="swiper-button-prev swiper-button-white"></div>
        </div>
        <div class="swiper-container gallery-thumbs">
            <div class="swiper-wrapper">
                @{ var j = 0;}
                @foreach (var m in Model)
                {
                    if (j == 0)
                    {

                        <div class="swiper-slide cover" style="background-image:url('@Url.Content(@m.Advertisement.Photothumbnail)')"></div>

                        j++;
                    }
                    break;
                }
                @foreach (var item in Model)
                {
                    <div class="swiper-slide cover" style="background-image:url( '@Url.Content(@item.Image)')"></div>
                }


            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 pill">
                <div class="bd-example bd-example-tabs">
                    <div class="d-flex justify-content-center">
                        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

                            <li class="nav-item">
                                <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Information Details</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-expanded="true">Information Poster</a>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                            @{ var h = 0;}
                            @foreach (var m in Model)
                            {
                                if (h == 0)
                                {



                                    <p>@m.Advertisement.Header</p>
                                    <p>@m.Advertisement.Content</p>



                                    h++;

                                }
                                break;

                            }


                        </div>



                        <div class="tab-pane fade show" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
                            <div class="row">
                                <div class="col-lg-12">


                                    <div class="review d-flex ">

                                        <div class="desc">


                                            @{ var k = 0;}
                                            @foreach (var m in Model)
                                            {
                                                if (k == 0)
                                                {
                                                    if (m.Advertisement.SeLLId != null)
                                                    {
                                                        <p>Name:@m.Advertisement.PrivateSeller.SellFullname</p>
                                                        <p>Phone:@m.Advertisement.PrivateSeller.SellPhone</p>
                                                        <p>Address:@m.Advertisement.PrivateSeller.SellAddress</p>
                                                    }
                                                    else if (m.Advertisement.AgentId != null)
                                                    {

                                                        <p>Name:@m.Advertisement.Agent.AgentName</p>
                                                        <p>Phone:@m.Advertisement.Agent.AgentPhone</p>
                                                        <p>Address:@m.Advertisement.Agent.AgentAddress</p>

                                                    }


                                                    k++;
                                                }
                                                break;
                                            }
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- loader -->




<script src="~/js/thumbnails/jquery-3.3.1.min.js"></script>

<script src="~/js/thumbnails/owl.carousel.min.js"></script>

<script src="~/js/thumbnails/jquery.countdown.min.js"></script>
<script src="~/js/thumbnails/jquery.magnific-popup.min.js"></script>
<script src="~/js/thumbnails/aos.js"></script>
<script src="~/js/thumbnails/swiper.min.js"></script>
<script src="~/js/thumbnails/main.js"></script>