@model RealtorsPortalSystem.Models.Agent

@{
    ViewBag.Title = "AgentActice";
    Layout = "~/Views/MainLayout/_MainLayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Agent</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AgentId)


        <div class="form-group">
            @Html.LabelFor(model => model.AgentActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButtonFor(x => x.AgentActive, true, new { @checked = true }) Active
                @Html.RadioButtonFor(x => x.AgentActive, false) Deactive
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
