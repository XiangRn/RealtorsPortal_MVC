@model RealtorsPortalSystem.Models.Advertisement
@{
    ViewBag.Title = "AdditionalPayment";
    Layout = "~/Views/MainLayout/_MainLayout_noSearch.cshtml";
}



<section class="ftco-section goto-here">
    <div class="container">
        <h2>PayNow</h2>
        @using (Html.BeginForm("PayNow", "Advertisements1", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Advertisement</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.AdvId)



                <div class="form-group">
                    <b>@Html.LabelFor(model => model.AdvId, "AdvId", htmlAttributes: new { @class = "control-label col-md-2" })</b> 
                    <div class="col-md-10">
                        @Html.DisplayFor(item => item.AdvId)

                    </div>
                </div>
                <div class="form-group">
                    <b>
                        @Html.LabelFor(model => model.Header, "Header", htmlAttributes: new { @class = "control-label col-md-2" })</b>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(item => item.Header)

                                    </div>
</div>



                <div class="form-group">
                    <label class="control-label col-md-2">Choose pakage:</label>
                    <div class="col-md-10">
                        <select name="expday" id="expday">
                            <option value="0day" selected>No purchase</option>
                            <option value="30days">30 days (2$)</option>
                            <option value="90days">3 months (5$)</option>
                            <option value="180days">6 monts (8$)</option>
                        </select>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" style="background-color:hotpink">Pay Now</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>



    <div>
        @Html.ActionLink("Back to List", "Index","Advertisements1")
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
